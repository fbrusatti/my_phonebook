!!!Strict
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "New Bamboo"

  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  = csrf_meta_tag

  = yield :css
  = yield :js


%body
  .main-container
    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}"

    %header

    %section.round
      = yield

    %footer

- title "Contact"

%p
  %strong First Name:
  = @contact.first_name
%p
  %strong Last Name:
  = @contact.last_name
%p
  %strong Email:
  = @contact.email
%p
  %strong Phone:
  = @contact.phone

%p
  = link_to "Edit", edit_contact_path(@contact)
  |
  = link_to "Destroy", @contact, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", contacts_path

- title "Contact"

%h1.center
  Contact View

%hr.clear

.container
  .column.span-10.prepend-2
    .span-8.bold.coolfont
      = @contact.full_name

    .span-8.bold.emailfont
      = @contact.email

    .span-8.bold
      = @contact.phone

    - if @contact.company
      .span-2.bold
        Company:
      .span-8
        = @contact.company

  .column.span-10
    .span-10.prepend-2
      = image_tag @contact.avatar(:thumb)


.center
  = link_to "Edit", edit_contact_path(@contact)
  |
  = link_to "Destroy", @contact, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", contacts_path

- title "Contact"

.container

  .column.span-4.bold
    First Name:
  .column.span-8
    = @contact.first_name

%p
  %strong Last Name:
  = @contact.last_name

%p
  %strong Email:
  = @contact.email

%p
  %strong Phone:
  = @contact.phone

%p
  %strong Picture:
  = image_tag @contact.avatar(:thumb)

%p
  %strong Company:
  = @contact.company

%p
  = link_to "Edit", edit_contact_path(@contact)
  |
  = link_to "Destroy", @contact, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", contacts_path
